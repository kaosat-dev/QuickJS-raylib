{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "start",
			"type": "shell",
			"linux": {
				"options": {
					"cwd": "src/sample/"
				},
				"command": [
					"make &&",
					"./a.out"
				],
			},
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		},
		{
			"label": "build lib",
			"type": "shell",
			"linux": {
				"command": "make",
			},
			"problemMatcher": "$gcc",
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		},
		{
			"label": "clean lib",
			"type": "shell",
			"command": "make clean",
			"problemMatcher": "$gcc",
			"group": "build",
			"presentation": {
				"reveal": "silent",
				"panel": "shared"
			}
		}
	]
}